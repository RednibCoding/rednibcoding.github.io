---
import Card from "./Card.astro";
import { Icon } from "astro-icon/components";
---

<div class="link-card">
    <p class="text-xs container opacity-80 pl-6 pr-6">
        © 2023 · Crafted with <span class="text-red-500 text-[1rem]">♥️</span> using
        <a href="https://astro.build/" target="_blank" class="text-red-500"
            >Astro</a
        > by Michael.
    </p>
</div>

<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    p {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
</style>
